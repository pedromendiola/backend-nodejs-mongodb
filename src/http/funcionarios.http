   "rg": "11.111.111-2"
   //"salario":5000.0,
}

### 
// DELETE - Apaga um funcionario através do id informado
DELETE {{baseURL}}/funcionarios/{{id}}
Content-Type: application/json

###
// PUT - Altera um funcionario pelo ID
PUT {{baseURL}}/funcionarios/
Content-Type: application/json

